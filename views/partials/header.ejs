<!-- // views/partials/header.ejs -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/dashboard">ระบบจัดการ</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto d-flex align-items-center">
            
            <!-- แสดงรูปโปรไฟล์และชื่อผู้ใช้ -->
            <% if (user) { %>
                <li class="nav-item">
                    <span class="navbar-text mr-3 d-flex align-items-center">
                        <!-- รูปโปรไฟล์ -->
                        <img src="<%= user.profile_picture_url || '/images/default_profile.png' %>" alt="Profile" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover; margin-right: 10px;">
                        <!-- ชื่อ -->
                        สวัสดี, <strong><%= user.first_name || user.username %></strong> (<%= user.role.toUpperCase() %>)
                    </span>
                </li>
            <% } %>
            <!-- สิ้นสุดการแสดงรูปโปรไฟล์และชื่อผู้ใช้ -->

            <% if (user) { %>
            <!-- ถ้า Login แล้ว -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bars"></i> เมนูหลัก
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    
                    <!-- เมนู Admin -->
                    <% if (user.role === 'admin') { %>
                        <a class="dropdown-item" href="/admin/manage-users">
                            <i class="fas fa-users-cog"></i> จัดการผู้ใช้งาน
                        </a>
                        <a class="dropdown-item" href="/admin/permissions">
                            <i class="fas fa-shield-alt"></i> ตั้งค่าสิทธิ์
                        </a>
                        <div class="dropdown-divider"></div>
                    <% } %>

                    <!-- เมนู Staff -->
                    <% if (user.role === 'admin' || user.permissions.includes('view_member_list')) { %>
                        <a class="dropdown-item" href="/member/list">
                            <i class="fas fa-users"></i> ดูรายการ Member
                        </a>
                    <% } %>

                    <!-- (แก้ไข!) เมนู Product (แยกสิทธิ์) -->

                    <!-- 1. (สำหรับ Admin/Staff) ลิงก์ "เพิ่มสินค้า" -->
                    <% if (user.role === 'admin' || user.permissions.includes('add_products')) { %>
                        <a class="dropdown-item" href="/products">
                            <i class="fas fa-plus"></i> เพิ่มสินค้า (n8n)
                        </a>
                    <% } %>

                    <!-- 2. (สำหรับ Member ทุกคนที่ Login) ลิงก์ "ดูรายการสินค้า" -->
                    <!-- (ย้ายลิงก์นี้ออกมานอก if 'add_products') -->
                    <a class="dropdown-item" href="/products/all">
                        <i class="fas fa-list-ul"></i> ดูรายการสินค้า
                    </a>

                    <!-- 3. (ย้าย) Divider จะแสดงเฉพาะถ้ามีสิทธิ์ 'add_products' -->
                    <% if (user.role === 'admin' || user.permissions.includes('add_products')) { %>
                        <div class="dropdown-divider"></div>
                    <% } %>
                    
                    <!-- เมนู Profile -->
                    <a class="dropdown-item" href="/profile">
                        <i class="fas fa-user-edit"></i> แก้ไขข้อมูลส่วนตัว
                    </a>
                </div>
            </li>

            <!-- (เพิ่ม) ไอคอนตะกร้าสินค้า -->
            <li class="nav-item">
                <!-- (แก้ไข) เปลี่ยนลิงก์ไปหน้า Cart -->
                <a class="nav-link" href="/products/cart" style="position: relative; color: white;">
                    <i class="fas fa-shopping-cart fa-lg"></i>
                    <span class="badge badge-danger" id="cart-item-count" style="position: absolute; top: 0px; right: -5px; font-size: 0.65rem;">
                        <!-- ตัวเลขนี้จะถูกอัปเดตโดย Script (หรือ Server ถ้าตั้งค่า res.locals) -->
                        <%= (typeof cart !== 'undefined' ? cart.length : 0) %>
                    </span>
                </a>
            </li>
            <!-- (สิ้นสุด) ไอคอนตะกร้าสินค้า -->

            <li class="nav-item">
                <a href="/logout" class="btn btn-outline-danger my-2 my-sm-0 ml-2">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </li>
            
            <% } else { %>
            <!-- ถ้ายังไม่ Login -->
            <li class="nav-item">
                <a href="/login" class="btn btn-outline-primary my-2 my-sm-0 ml-2">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            </li>
            <% } %>

        </ul>
    </div>
</nav>